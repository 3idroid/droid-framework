<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/df_row_vertical">

    <TextView
        style="@style/df_h3"
        android:text="Buttons"/>
    <View
        style="@style/df_hr" />

    <Button
        android:id="@+id/default_btn"
        style="@style/df_btn_default"
        android:text="default"
        android:layout_width="match_parent"/>

    <Button
        android:id="@+id/primary_btn"
        android:layout_width="match_parent"
        style="@style/df_btn_primary"
        android:text="Primary"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/success_btn"
        android:text="Success"
        style="@style/df_btn_success"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"/>

    <Button
        android:id="@+id/info_btn"
        android:text="Info"
        style="@style/df_btn_info"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"/>

    <Button
        android:id="@+id/warning_btn"
        android:text="Warning"
        style="@style/df_btn_warning"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"/>

    <Button
        android:id="@+id/danger_btn"
        android:text="Danger"
        style="@style/df_btn_danger"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"/>

    <TextView
        style="@style/df_h3"
        android:text="Bs4 Buttons"/>
    <View
        style="@style/df_hr" />

    <Button
        android:text="Primary"
        style="@style/df4_btn_primary"
        android:layout_marginTop="10dp"/>

    <Button
        android:text="Secondary"
        style="@style/df4_btn_secondary"
        android:layout_marginTop="10dp"/>

    <Button
        android:text="Success"
        style="@style/df4_btn_success"
        android:layout_marginTop="10dp"/>

    <Button
        android:text="Danger"
        style="@style/df4_btn_danger"
        android:layout_marginTop="10dp"/>

    <Button
        android:text="Warning"
        style="@style/df4_btn_warning"
        android:layout_marginTop="10dp"/>

    <Button
        android:text="Info"
        style="@style/df4_btn_info"
        android:layout_marginTop="10dp"/>

    <Button
        android:text="Light"
        style="@style/df4_btn_light"
        android:layout_marginTop="10dp"/>

    <Button
        android:text="Dark"
        style="@style/df4_btn_dark"
        android:layout_marginTop="10dp"/>

    <Button
        android:text="Link"
        style="@style/df4_btn_link"
        android:layout_marginTop="10dp"/>

    <TextView
        style="@style/df_h3"
        android:text="Button with badge"/>
    <View
        style="@style/df_hr" />

    <android.support.v7.widget.CardView
        style="@style/df4_btn_primary"
        android:layout_width="wrap_content">

        <LinearLayout
            style="@style/df_row">
            <TextView
                style="@style/df_global"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="button"/>
            <TextView
                style="@style/df_badge"
                android:text="4"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>